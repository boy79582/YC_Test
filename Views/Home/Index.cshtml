@{
    ViewBag.Title = "人員資訊表";
}
<div class="row" style="margin-bottom:2vh">
    <div class="col-2">
        <button type="button" class="btn btn-primary" style="float: left;">Create</button>
    </div>
    <div class="col-2">
        <button type="button" class="btn btn-danger" style="margin-left:10px;">Delete</button>
    </div>
</div>
<div class="row">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Chinese name</th>
                <th>English name</th>
                <th>Phone number</th>
                <th>Birthday</th>
                <th>Created time</th>
                <th>Updated time</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts{
    <script>       
        $(document).ready(function () {
            var personnelDT = $('#example').DataTable({
                columns: [
                    { data: 'ChineseName' },
                    { data: 'EnglishName' },
                    { data: 'phoneNumber' },
                    { data: 'Birthday' },
                    { data: 'CreatedTime' },
                    { data: 'UpdatedTime' },
                ],
                columnDefs: [                   
                    {
                        targets: 3,
                        render: function (data) {
                            return moment(data).format('YYYY/MM/DD');
                        }
                    },
                    {
                        targets: 4,
                        render: function (data) {
                            return moment(data).format('YYYY/MM/DD HH:mm:ss');
                        }
                    },
                    {
                        targets: 5,
                        render: function (data) {
                            return moment(data).format('YYYY/MM/DD HH:mm:ss');
                        }
                    }
                ]
            });
            $.ajax({
                type: "Get",
                url: "../Home/getData",
                //data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                async: false,
                success: function (data) {
                    personnelDT.clear();
                    personnelDT.rows.add(data);
                    personnelDT.draw();
                },
                failure: function (errMsg) {
                    console.log(errMsg);
                }
            });
        });
       
    </script>    
} 